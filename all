#include<iostream>
using namespace std;
int main(){
int a,b;
cout<<"enter no. a"<<endl;
cin>>a;
cout<<"emnter b:\n";
cin>>b;
int powerof=1;
for(int c = b;c>0;c--){
    powerof=powerof*a;
}
cout<<a<<" raised to power of "<<b<<" is "<<powerof;

return 0;

}








#include <iostream>
using namespace std;
int main(){
for(int i=1;i<=4;i++){

    for(int j =1;j<=6;j++){
        if((i==1)||(i==4)||(j==1)||(j==6)){
            cout<<j;
        }
        else cout<<" ";
    }
    cout<<endl;
}








