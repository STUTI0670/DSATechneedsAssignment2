for(int i=1;i<=4;i++){

    for(int j= 1;j<=6;j++){
        cout<<j;
    }
    cout<<endl;
}

    return 0;
}















#include <iostream>
using namespace std;
int main(){
for(int i=1;i<=4;i++){

    for(int j =1;j<=6;j++){
        if((i==1)||(i==4)||(j==1)||(j==6)){
            cout<<j;
        }
        else cout<<" ";
    }
    cout<<endl;
}


















#include <iostream>
using namespace std;
int main(){
    for(int i=1;i<=4;i++){
        
        // for(int j=1;j<=3;j++){
        // if(i%2==1){cout<<"12";}
        // else if(i%2==0){cout<<"21";}}
        // cout<<"\n";

        for(int j=1;j<=6;j++){
            if((i+j)%2==0){cout<<"1";}//if you remove ==0 the if turns false for even
            else cout<<"2";
        }cout<<endl;
    }
}


















