#include<iostream>
using namespace std;
int main(){
    for(int i =1;i<=6;i++){
        for(int j=1;j<=i;j++){
            cout<<"*";
        }
        cout<<endl;
    }
    return 0;
}


#include<iostream>
using namespace std;
int main(){
    for(int i =1;i<=6;i++){
        for(int j=1;j<=6-i;j++){
            cout<<"*";
        }
        cout<<endl;
    }
    return 0;
}


#include<iostream>
using namespace std;
int main(){
    for(int i =1;i<=4;i++){
        for(int j=1;j<=7;j++){
            if(j==4){cout<<"*";}
            else if((i!=1)&&(j==3)){cout<<"*";}
            else if((i!=1)&&(j==5)){cout<<"*";}
            else if((i==3)&&(j==2)){
                cout<<"*";
            }
            else if((i==3)&&(j==6)){
                cout<<"*";
            }
            else if((i==4)&&(j==1)){cout<<"*";}
            else if((i==4)&&(j==7)){cout<<"*";}
            else if((i==4)&&(j==2)){cout<<"*";}
            else if((i==4)&&(j==6)){cout<<"*";}
            else cout<<" ";
        }
        cout<<endl;
    }
    return 0;
}






#include <iostream>
using namespace std;
int main(){

for(int i=1;i<=4;i++){
    for(int j = 1; j<=7;j++){
        if(i==4){cout<<"*";}
        else if(i==3){
            if((j==2)||(j==3)||(j==4)||(j=5)||(j==6)){
                cout<<"*";
            }
            else cout<<" ";
        }
        else if(i==2){if((j==3)||(j==4)||(j==5)){cout<<"*";}
        else cout<<" ";}
        else if((i==1)&&(j==4)){cout<<"*";}
        else cout<<" ";
    }
    cout<<endl;
}

    return 0;
}








#include <iostream>
using namespace std;
int main(){

for(int i=1;i<=4;i++){
    for(int j=1;j<=4-i;j++){
        cout<<" ";
    }
    for(int j=1;j<=2*i-1;j++){
        if((j==1)||j==2*i-1){
            cout<<i;
        }
        else if(i==4){
            cout<<i;

        }
        else cout<<" ";
    }
    cout<<endl;
}





#include<iostream>
using namespace std;
int main(){
cout<<"enter no.:"<<endl;
int n;
cin>>n;
int sum=0;
int m=n;
while(m>0){
    sum++;
    m=m/10;
    
}
cout<<sum;

    return 0;
}







#include <iostream>
using namespace std;
int main(){
    cout<<"enter no. of rows of triangle you want :"<<endl;
    int n;
    cin>>n;
for(int i=1;i<=n;i++){

    for(int j =1;j<=(n-i+1);j++){cout<<" ";}
    for(int j =1;j<=2*i-1;j++){cout<<"*";}
    cout<<endl;
}


    return 0;
}








#include<iostream>
using namespace std;
int main(){
    cout<<"enter no.: "<<endl;
    
    int n;
    cin>>n;
    int sum=0;
    for(int i=1;i<=n;i++){
        if(i%2==1){
            sum+=i;
        }
        else sum-=i;
    }
    cout<<sum;
    return 0;
}











#include <iostream>
using namespace std;
int main(){
int n=7;
for(int i=1;i<=n;i++){

   for(int j=i;j<=n;j++){
    cout<<j;

   }
   for(int j=1;j<=i-1;j++){cout<<j;}
   cout<<endl;
}






#include<iostream>
using namespace std;
int main(){
    cout<<"enter no. : "<<endl;
    int n;
    cin>>n;
    int factorial=1;
    for(int i=1;i<=n;i++){
        factorial*=i;
        cout<<factorial<<endl;

    }
}







